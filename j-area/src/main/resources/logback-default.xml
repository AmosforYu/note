<?xml version="1.0" encoding="UTF-8"?>  
<configuration>  
  
    <!-- ch.qos.logback.core.ConsoleAppender 控制台输出 -->  
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">  
        <encoder>  
            <pattern>[%d{yyyy/MM/dd HH:mm:ss:SSS}][j-basics][%t][%c:%L] %m%n
            </pattern>  
        </encoder>  
    </appender>  
  
    <!-- ch.qos.logback.core.rolling.RollingFileAppender 文件日志输出 -->  
    <appender name="file"  
        class="ch.qos.logback.core.rolling.RollingFileAppender">  
        <File>logs/j-area.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
            <FileNamePattern>logs/j-area.log-%d{yyyy-MM-dd}
            </FileNamePattern>  
        </rollingPolicy>  
        <layout class="ch.qos.logback.classic.PatternLayout">  
            <pattern>[%d{yyyy/MM/dd HH:mm:ss:SSS}][j-area][%t][%c:%L] %m%n
            </pattern>  
        </layout>  
    </appender>  
    
    <logger name="com.yyb" additivity="false">
	    <level value="debug" />  
	    <appender-ref ref="file" /> 
	</logger>
  
    <!-- 日志级别 -->  
    <root>  
        <level value="info" />  
        <appender-ref ref="console" />  
    </root>  
  
  
</configuration>   
